@model Todo.WebUI.Models.TodoItem.TodoViewModel
@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

<h2>Todos</h2>

<table class="table">
    <thead>
        <tr>
            <th> Name </th>
            <th> Priority </th>
            <th> Status </th>
            <th>  </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Todos)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Priority
                </td>
                <td>
                    @item.Status
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p> <a class="btn btn-success" asp-action="Create">Add Todo</a> </p>

<hr/>
