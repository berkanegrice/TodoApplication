@model Todo.WebUI.Models.TodoItem.TodoItemCreateViewModel
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Todo.Domain.Enums

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Todo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label">Priority</label>
                <select asp-for="Priority" class="form-control" 
                        asp-items="@Html.GetEnumSelectList<PriorityLevel>()"></select>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<partial name="_EditorStylePartial" />

@section Scripts {
    <partial name="_EditorScriptsPartial" />
}